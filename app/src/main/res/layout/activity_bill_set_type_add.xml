<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg"
    tools:context=".BillSetTypeAddActivity">

    <LinearLayout
        android:layout_width="409dp"
        android:layout_height="700dp"
        android:orientation="vertical"
        android:paddingTop="@dimen/spacing_biger"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:id="@+id/l1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/spacing_big"
            android:orientation="horizontal"
            android:paddingLeft="@dimen/spacing_big"
            android:paddingTop="@dimen/spacing_normal">

            <EditText
                android:id="@+id/type_name1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/input_bg2"
                android:drawableLeft="@drawable/ic_baseline_star_rate_24"
                android:hint="请输入规格1"
                android:paddingLeft="@dimen/spacing_normal"
                android:paddingTop="@dimen/spacing_normal"
                android:paddingBottom="@dimen/spacing_normal" />

            <ImageButton
                android:id="@+id/type_add1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:background="@null"
                android:paddingRight="@dimen/spacing_normal"
                android:src="@drawable/ic_baseline_add_circle_outline_24" />

            <ImageButton
                android:id="@+id/type_remove1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:background="@null"
                android:src="@drawable/ic_baseline_remove_circle_outline_24"
                android:visibility="visible" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/l2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/spacing_big"
            android:orientation="horizontal"
            android:paddingLeft="@dimen/spacing_big"
            android:paddingTop="@dimen/spacing_normal"
            android:visibility="invisible">

            <EditText
                android:id="@+id/type_name2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/input_bg2"
                android:drawableLeft="@drawable/ic_baseline_star_rate_24"
                android:hint="请输入规格2"
                android:paddingLeft="@dimen/spacing_normal"
                android:paddingTop="@dimen/spacing_normal"
                android:paddingBottom="@dimen/spacing_normal" />

            <ImageButton
                android:id="@+id/type_add2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:background="@null"
                android:paddingRight="@dimen/spacing_normal"
                android:src="@drawable/ic_baseline_add_circle_outline_24" />

            <ImageButton
                android:id="@+id/type_remove2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:background="@null"
                android:src="@drawable/ic_baseline_remove_circle_outline_24" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/l3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/spacing_big"
            android:orientation="horizontal"
            android:paddingLeft="@dimen/spacing_big"
            android:paddingTop="@dimen/spacing_normal"
            android:visibility="invisible">

            <EditText
                android:id="@+id/type_name3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/input_bg2"
                android:drawableLeft="@drawable/ic_baseline_star_rate_24"
                android:hint="请输入规格3"
                android:paddingLeft="@dimen/spacing_normal"
                android:paddingTop="@dimen/spacing_normal"
                android:paddingBottom="@dimen/spacing_normal" />

            <ImageButton
                android:id="@+id/type_add3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:background="@null"
                android:paddingRight="@dimen/spacing_normal"
                android:src="@drawable/ic_baseline_add_circle_outline_24" />

            <ImageButton
                android:id="@+id/type_remove3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:background="@null"
                android:src="@drawable/ic_baseline_remove_circle_outline_24" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/l4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/spacing_big"
            android:orientation="horizontal"
            android:paddingLeft="@dimen/spacing_big"
            android:paddingTop="@dimen/spacing_normal"
            android:visibility="invisible">

            <EditText
                android:id="@+id/type_name4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/input_bg2"
                android:drawableLeft="@drawable/ic_baseline_star_rate_24"
                android:hint="请输入规格4"
                android:paddingLeft="@dimen/spacing_normal"
                android:paddingTop="@dimen/spacing_normal"
                android:paddingBottom="@dimen/spacing_normal" />

            <ImageButton
                android:id="@+id/type_add4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:background="@null"
                android:paddingRight="@dimen/spacing_normal"
                android:src="@drawable/ic_baseline_add_circle_outline_24" />

            <ImageButton
                android:id="@+id/type_remove4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:background="@null"
                android:src="@drawable/ic_baseline_remove_circle_outline_24" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/l5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/spacing_big"
            android:orientation="horizontal"
            android:paddingLeft="@dimen/spacing_big"
            android:paddingTop="@dimen/spacing_normal"
            android:visibility="invisible">

            <EditText
                android:id="@+id/type_name5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/input_bg2"
                android:drawableLeft="@drawable/ic_baseline_star_rate_24"
                android:hint="请输入规格5"
                android:paddingLeft="@dimen/spacing_normal"
                android:paddingTop="@dimen/spacing_normal"
                android:paddingBottom="@dimen/spacing_normal" />

            <ImageButton
                android:id="@+id/type_remove5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:background="@null"
                android:paddingRight="@dimen/spacing_normal"
                android:src="@drawable/ic_baseline_remove_circle_outline_24" />

            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:background="@null"
                android:src="@drawable/ic_baseline_add_circle_outline_24"
                android:visibility="invisible" />
        </LinearLayout>
    </LinearLayout>

    <Button
        android:id="@+id/btn_type_submit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginTop="64dp"
        android:layout_marginEnd="24dp"
        android:layout_marginBottom="32dp"
        android:background="@drawable/btn_bg"
        android:text="提交"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0" />

</androidx.constraintlayout.widget.ConstraintLayout>